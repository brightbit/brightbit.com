code {
  padding: 0 0.5em;
  border: 1px solid #ddd;
  border-radius: 3px;
  background: white;
}

.code-title {
  color: #aaa;
  font-weight: 300;
  margin: 1.5em 0 -0.5em;
}

.highlight {
  position: relative;
  z-index: 1;
  border: 1px solid #ddd;
  margin-bottom: 2em;
  border-radius: 3px;
  background: white;
  overflow: scroll;
  line-height: 1.5em;
}

.highlight:after {
  position: absolute;
}

.highlight .gutter {
  padding-right: 0.5em;
  color: #ddd;
  background: #f3f3f3;
}
